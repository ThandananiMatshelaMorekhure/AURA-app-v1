<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/headlinesFragment">

    <fragment
        android:id="@+id/headlinesFragment"
        android:name="com.donation.auraappmarkup.ui.fragments.HeadlineFragment"
        android:label="HeadlineFragment">
        <action
            android:id="@+id/action_headlinesFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
    </fragment>

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.donation.auraappmarkup.ui.fragments.FavouriteFragment"
        android:label="FavouriteFragment">
        <action
            android:id="@+id/action_favouritesFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.donation.auraappmarkup.ui.fragments.SearchFragment"
        android:label="SearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
    </fragment>

    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.donation.auraappmarkup.ui.fragments.ArticlesFragment"
        android:label="ArticlesFragment">
        <argument
            android:name="article"
            app:argType="com.donation.auraappmarkup.models.Article" />
    </fragment>
</navigation>