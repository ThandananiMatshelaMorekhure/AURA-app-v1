<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_success"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daily Tracking"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¸"
                        android:textSize="32sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today: Aug 26, 2025"
                    android:textSize="18sp"
                    android:textColor="@color/purple_500"
                    android:gravity="start"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cycle day 5"
                    android:textSize="16sp"
                    android:textColor="@color/purple_200"
                    android:gravity="start"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Symptoms Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:layout_marginHorizontal="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How are you feeling today?"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:paddingBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Symptom Pills Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <!-- First Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <CheckBox
                            android:id="@+id/cbCramps"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Cramps"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/symptom_checkbox_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />

                        <CheckBox
                            android:id="@+id/cbHeadache"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Headache"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/symptom_checkbox_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Second Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <CheckBox
                            android:id="@+id/cbBloating"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Bloating"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/symptom_checkbox_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />

                        <CheckBox
                            android:id="@+id/cbTenderBreasts"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Tender Breasts"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/symptom_checkbox_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Third Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cbAcne"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Acne"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/symptom_checkbox_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />

                        <CheckBox
                            android:id="@+id/cbFatigue"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Fatigue"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/symptom_checkbox_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mood Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:layout_marginHorizontal="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mood"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:paddingBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <RadioGroup
                    android:id="@+id/moodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Mood options in a grid-like layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <RadioButton
                            android:id="@+id/rbHappy"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="ðŸ˜Š Happy"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/mood_radio_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />

                        <RadioButton
                            android:id="@+id/rbNeutral"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="ðŸ˜ Neutral"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/mood_radio_bg"
                            android:gravity="center"
                            android:checked="true"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbSad"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="ðŸ˜” Sad"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/mood_radio_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />

                        <RadioButton
                            android:id="@+id/rbAnxious"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="ðŸ˜° Anxious"
                            android:textSize="16sp"
                            android:textColor="@color/purple_700"
                            android:buttonTint="@color/purple_500"
                            android:background="@drawable/mood_radio_bg"
                            android:gravity="center"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Flow Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:layout_marginHorizontal="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flow Intensity"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:paddingBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <RadioGroup
                    android:id="@+id/flowGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbLight"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="ðŸ’§ Light"
                        android:textSize="16sp"
                        android:textColor="@color/purple_700"
                        android:buttonTint="@color/purple_500"
                        android:background="@drawable/flow_radio_bg"
                        android:gravity="center"
                        android:fontFamily="sans-serif" />

                    <RadioButton
                        android:id="@+id/rbMedium"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:text="ðŸ’§ðŸ’§ Medium"
                        android:textSize="16sp"
                        android:textColor="@color/purple_700"
                        android:buttonTint="@color/purple_500"
                        android:background="@drawable/flow_radio_bg"
                        android:gravity="center"
                        android:checked="true"
                        android:fontFamily="sans-serif" />

                    <RadioButton
                        android:id="@+id/rbHeavy"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="ðŸ’§ðŸ’§ðŸ’§ Heavy"
                        android:textSize="16sp"
                        android:textColor="@color/purple_700"
                        android:buttonTint="@color/purple_500"
                        android:background="@drawable/flow_radio_bg"
                        android:gravity="center"
                        android:fontFamily="sans-serif" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notes Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp"
            android:layout_marginHorizontal="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Notes"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:paddingBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <EditText
                    android:id="@+id/notesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Any other observations, activities, or thoughts you'd like to record..."
                    android:textSize="16sp"
                    android:textColor="@color/purple_700"
                    android:textColorHint="@color/purple_200"
                    android:background="@drawable/notes_bg"
                    android:padding="16dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Optional - but helpful for understanding patterns"
                    android:textSize="14sp"
                    android:textColor="@color/purple_200"
                    android:paddingTop="8dp"
                    android:gravity="start"
                    android:fontStyle="italic" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Save Today's Entry"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            android:paddingVertical="16dp"
            android:elevation="6dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <!-- Motivational Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¸ Every entry brings you closer to understanding your body ðŸŒ¸"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:fontStyle="italic"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>