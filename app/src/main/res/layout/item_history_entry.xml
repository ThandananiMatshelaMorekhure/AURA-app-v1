<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Header Section with Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/purple_500"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aug 10, 2025"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Symptoms Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/symptoms_display_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ©º"
                        android:textSize="18sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Symptoms"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <TextView
                    android:id="@+id/symptomsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cramps, Headache"
                    android:textSize="15sp"
                    android:textColor="@color/purple_700"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Bottom Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Mood Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/info_section_bg"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜Š"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mood"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/moodText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Happy"
                        android:textSize="15sp"
                        android:textColor="@color/purple_700"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Flow Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/info_section_bg"
                    android:padding="16dp"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’§"
                            android:textSize="16sp"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flow"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_500"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/flowText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textSize="15sp"
                        android:textColor="@color/purple_700"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/purple_500"
                    android:background="@drawable/action_button_bg"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="sans-serif-medium"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/shareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="@color/teal_700"
                    android:background="@drawable/action_button_bg"
                    android:paddingHorizontal="16dp"
                    android:fontFamily="sans-serif-medium"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_200"
            android:layout_marginHorizontal="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep tracking your wellness journey"
            android:textSize="12sp"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:fontStyle="italic"
            android:padding="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>