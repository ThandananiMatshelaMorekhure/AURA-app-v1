<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/task_item_background"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Task Checkbox -->
    <CheckBox
        android:id="@+id/cb_task_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        app:buttonTint="#D18B7A" />

    <!-- Task Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Task Title -->
        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Task Title"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/tv_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Task description goes here"
            android:textColor="#666666"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- Task Due Date -->
        <TextView
            android:id="@+id/tv_task_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Due: Today"
            android:textColor="#999999"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Task Priority Indicator -->
    <View
        android:id="@+id/view_priority_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:background="#D18B7A"
        android:visibility="gone" />

    <!-- More Options Button -->
    <ImageButton
        android:id="@+id/btn_task_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Task options"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert" />

</LinearLayout>