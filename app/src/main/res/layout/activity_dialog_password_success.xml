<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background_success"
    android:padding="24dp"
    android:gravity="center">

    <!-- Top area with close button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">

        <!-- Close button aligned to top-right -->
        <ImageView
            android:id="@+id/ivCloseSuccess"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white" />

    </RelativeLayout>

    <!-- Spacer to center content vertically -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Centered content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0">

        <!-- Happy laptop illustration -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="48dp">

            <!-- Laptop screen -->
            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/laptop_screen_green">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <!-- Happy face -->
                    <TextView
                        android:id="@+id/tvHappyFace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="^_^"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_green"
                        android:layout_centerInParent="true"
                        android:fontFamily="monospace" />

                    <!-- Decorative elements -->
                    <View
                        android:layout_width="12dp"
                        android:layout_height="2dp"
                        android:background="@color/dark_green"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="2dp"
                        android:background="@color/dark_green"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="10dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="2dp"
                        android:background="@color/dark_green"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Laptop keyboard -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/laptop_keyboard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:gravity="center">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:background="@color/keyboard_key"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:background="@color/keyboard_key"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:background="@color/keyboard_key"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:background="@color/keyboard_key" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Success message -->
        <TextView
            android:id="@+id/tvSuccessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yay!"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvSuccessMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your password was\nsuccessfully changed"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:lineSpacingExtra="4dp"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Spacer to push button to bottom area -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom button area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="0"
        android:layout_marginBottom="32dp">

        <!-- Continue button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:text="continue"
            android:textColor="@color/dark_purple"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/white"
            android:elevation="8dp"
            style="@style/Widget.Material3.Button.UnelevatedButton" />

    </LinearLayout>

</LinearLayout>